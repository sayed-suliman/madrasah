{{>header}}


{{>navbar}}

{{>sidebar}}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="container-full">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="d-flex align-items-center">
                <div class="me-auto">
                    <h3 class="page-title"> طلباء علم رکارڈ</h3>
                </div>

            </div>
        </div>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="example"
                                class="table table-bordered table-hover display nowrap margin-top-10 w-p100">
                                <thead>
                                    <tr>
                                        <th>رول نمبر</th>
                                        <th>نام</th>
                                        <th>والد کا نام</th>
                                        <th>موبائل نمبر</th>
                                        <th>حالت</th>
                                        <th>کارروائی</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each students}}
                                    <tr>
                                        <td>{{this.rollNumber}}</td>
                                        <td>{{this.name}}</td>
                                        <td>{{this.fatherName}}</td>
                                        <td>{{this.phone}}</td>
                                        <td>
                                            {{#if this.pending}}
                                            <div class="px-25 py-10 w-100">
                                                <span class="badge badge-danger">بلا معاوضہ</span>
                                            </div>
                                            {{else}}
                                            <div class="px-25 py-10 w-100">
                                                <span class="badge badge-success">ادا کیا</span>
                                            </div>
                                            {{/if}}
                                        </td>
                                        <td>
                                            <a class="btn btn-success px-2 py-1 me-1"
                                                href="/fee/student?id={{this._id}}"><i
                                                    class="mdi mdi-account-edit"></i></a>
                                        </td>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>

                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
</div>

